---
let isDark = false;
let session = false;

const isDarkMode = () => {
    isDark = !isDark;
};

const { cookies } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
    session = true;
}
---

<nav class="bg-white dark:bg-[#0c1015] fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
  <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="https://www.sagradafamilia.cl/2020/wp-content/uploads/2023/07/Logo-web.png" class="h-8" alt="Logo Sagrada Familia">
      <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Departamento de Salud</span>
  </a>
  
  <form action="/api/auth/signout" class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
    { session &&  
    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Cerrar Sesi√≥n</button>}    
  
  </div>
  </div>
</nav>
